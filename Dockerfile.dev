# syntax=docker/dockerfile:1

# Use Node.js as base
FROM node:20-alpine

# Set working directory
WORKDIR /usr/src/app

# Install dependencies
COPY package.json package-lock.json ./
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 3000

# Run Vite in dev mode, bind to all interfaces so Docker can access it
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]